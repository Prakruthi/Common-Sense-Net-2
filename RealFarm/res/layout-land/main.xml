<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<com.google.android.maps.MapView
		xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/mapview"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:enabled="true" android:clickable="true"
		android:apiKey="0Zn33DzPcEB9dV6ztClpuA8RWKrp4hQnKPLXHaA" />

	<SlidingDrawer android:id="@+id/slidingDrawer"
		android:handle="@+id/drawerHandle" android:content="@+id/contentLayout"
		android:layout_width="200dip" android:layout_height="fill_parent"
		android:layout_alignParentRight="true" android:orientation="horizontal">

		<Button android:id="@+id/drawerHandle" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="@string/menu">
		</Button>

		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:id="@+id/contentLayout" android:gravity="center"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:background="#BF000000" android:orientation="vertical">

			<Button android:id="@+id/topBtn" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="@string/mylocation"
				android:layout_alignParentLeft="true" android:layout_alignParentTop="true">
			</Button>

			<Button android:id="@+id/topBtn2" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="@string/village"
				android:layout_alignParentLeft="true" android:layout_alignParentTop="true">
			</Button>

			<LinearLayout android:layout_width="wrap_content"
				android:paddingRight="10dip" android:layout_height="fill_parent"
				android:orientation="vertical" android:id="@+id/contentplot"
				android:gravity="center">
			</LinearLayout>


		</LinearLayout>

	</SlidingDrawer>
	
	<!-- News drawer -->
	<SlidingDrawer android:id="@+id/newsDrawer"
		android:handle="@+id/newsDrawerHandle" android:content="@+id/newsContentLayout"
		android:layout_height="250dp" android:layout_width="fill_parent"
		android:clickable="false" android:layout_alignParentBottom="true"
		android:orientation="vertical">

		<!-- Handle -->
		<Button android:id="@+id/newsDrawerHandle" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="@string/news">
		</Button>
		
		<LinearLayout android:id="@+id/newsContentLayout"
			android:gravity="center" android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:background="#BF000000"
			android:orientation="vertical">
		</LinearLayout>	
	
	</SlidingDrawer>
	

</RelativeLayout>